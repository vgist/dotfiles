Host bitbucket.org
    HostName        altssh.bitbucket.org
    Port            443
    User            git

Host github.com
    HostName        ssh.github.com
    Port            443
    User            git

Compression         yes
Protocol            2
#AddKeysToAgent      yes
UseKeychain         yes

Match host * exec "gpg-connect-agent updatestartuptty /bye"
